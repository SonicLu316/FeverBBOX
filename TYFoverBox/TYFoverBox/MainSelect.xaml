        <FlexLayout Direction="Column"
                    AlignItems="Center"
                    JustifyContent="SpaceEvenly">

            <ScrollView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

                    <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                        <Label Text="請選擇入口"  FontSize="Title" />
                    </StackLayout>

                    <StackLayout x:Name="StackLayoutMaster" Orientation="Vertical" HorizontalOptions="Center">
                    </StackLayout>
                </StackLayout>
             </ScrollView>
        </FlexLayout>

       


    </ContentPage.Content>
</ContentPage>
